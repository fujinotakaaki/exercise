<% if @book_new.errors.any? then %>
<%= render 'books/show_error_index', unit: @book_new %>
<% end %>

<!--body-->
<div class="container">
  <div class="row">

    <!--Plofile_section-->
    <!--ユーザープロフィール部-->
    <div class="col-xs-3">
      <div class=""><%= render 'users/profile', person: current_user %></div>
      <!--ユーザープロフィール部-->

      <!--新規投稿-->
      <div class=""><%= render 'books/new', book_new: @book_new %></div>
      <!--新規投稿-->
    </div>
    <!--Plofile_section-->

    <!--リスト部-->
    <div class="col-xs-9">
      <h2>Books</h2>
      <% title_column = ["", "Title", "Opinion",""] %>
      <table>
        <tr>
          <th><%= title_column.shift %></th>
          <th><%= title_column.shift %></th>
          <th><%= title_column.shift %></th>
        </tr>
        <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(book.user_id) do %>
            <%= attachment_image_tag book.user, :profile_image, size:'100x100', format: 'jpeg', fallback: "no_image.jpg", size:'100x100' %>
            <% end %>
          </td>
          <td><%= link_to book.title, book_path(book) %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </table>
    </div>
    <!--リスト部-->
    
  </div>
</div>
