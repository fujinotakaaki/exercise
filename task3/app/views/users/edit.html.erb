<% if @user.errors.any? then %>
<%= render 'books/show_error_index', unit: @user%>
<% end %>

<!--body-->
<div class="container">
  <div class="row">
    <!--サイドの余白確保-->
    <div class="col-md-1"></div>
    <!--サイドの余白確保-->

    <!--Plofile_section-->
    <!--ユーザープロフィール部-->
    <div class="col-md-3">
      <div class="">
        <h2>User info</h2>
        <%= form_for(@user) do |u| %>
        <table>
          <tr>
            <th></th>
            <th></th>
            <th></th>
          </tr>
          <tr>
            <td class="profile-headline"><b>Name</b></td>
            <td><%= u.text_field :name, class: "input-form-size", placeholder: "名前", autofocus: true%></td>
          </tr>
          <tr>
            <td class="profile-headline">
              <b>Image</b><br>
              <%= attachment_image_tag @user, :profile_image, size:'100x100', fallback: "no_image.jpg", size:'100x100' %>
              <!--, class: "img-circle pull-left profile-thumb"-->
            </td>
            <td><%= u.attachment_field :profile_image, placeholder: "プロフィール画像" %></td>
          </tr>
          <tr>
            <td class="profile-headline"><b>introduction</b></td>
            <td><%= u.text_area :introduction, class: "input-form-size", placeholder: "自己紹介文" %></td>
            </tr>
          </table>
          <%= u.submit "Update User", class:"btn btn-default" %>
          <% end %>
        </div>
        <!--ユーザープロフィール部-->

        <!--新規投稿-->
        <%#= render 'books/new', book_new: @book_new %>
        <!--新規投稿-->
      </div>
      <!--Plofile_section-->

      <!--リスト部-->
      <div class="col-md-7"></div>
      <!--リスト部-->

      <!--サイドの余白確保-->
      <div class="col-md-1"></div>
      <!--サイドの余白確保-->
    </div>
  </div>
